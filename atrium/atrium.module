        'welcome_admin' => array('info' => t('Welcome (for admins)')),
        'welcome_member' => array('info' => t('Welcome (for members)')),
      );
      return $info;
    case 'view':
      module_load_include('inc', 'atrium', 'atrium.block');
      $function = "_atrium_block_{$delta}";
