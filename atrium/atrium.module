function atrium_block($op = 'list', $delta = 0) {
  switch ($op) {
    case 'list':
      $info = array(
        'account' => array('info' => t('Atrium: User account')),
        'admin_links' => array('info' => t('Atrium: Admin links')),
        'create' => array('info' => t('Atrium: Create content')),
